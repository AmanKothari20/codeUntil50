<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/feedImageView"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_icon"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/feedNameTv"
            android:text="ProfileName"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/feedImageView"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dislikeFeedTv"
            android:text="0"
            android:padding="2dp"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:drawableTop="@drawable/ic_baseline_thumb_down_24"
            android:drawableTint="@color/black"
android:layout_above="@id/likeFeedTv"            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/likeFeedTv"
            android:text="0"
            android:padding="2dp"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:drawableTop="@drawable/ic_baseline_thumb_up_24"
            android:drawableTint="@color/black"
            android:layout_alignBottom="@id/feedImageView"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>